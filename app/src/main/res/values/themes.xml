<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNasa" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/ChipStyleDefaultTheme</item>
        <item name="menuItemColor">@color/black</item>
        <item name="bottomSheetBackground">@color/extra_light_gray</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationMyNasa</item>
    </style>

    <!-- Splash theme    -->
    <style name="SplashTheme" parent="ThemeSpace">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Space theme -->
    <style name="ThemeSpace" parent="Theme.Material3.Dark.NoActionBar">
        <item name="menuItemColor">@color/white</item>
        <item name="bottomSheetBackground">#FF131313</item>
        <item name="chipStyle">@style/ChipStyleSpaceTheme</item>
        <item name="android:textViewStyle">@style/TextViewSpaceTheme</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationSpaceTheme</item>
        <item name="android:colorBackground">@color/dracula_gray</item>
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="collapsingToolbarLayoutStyle">@style/CollapsingToolbarSpaceTheme</item>
    </style>

</resources>