<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNasa" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/ChipStyleDefaultTheme</item>
        <item name="menuItemColor">@color/black</item>
        <item name="bottomNavigationStyle">@style/bottomNavigationMyNasa</item>
    </style>

    <!-- Space theme -->
    <style name="ThemeSpace" parent="Theme.Material3.Dark.NoActionBar">
        <item name="menuItemColor">@color/white</item>
        <item name="chipStyle">@style/ChipStyleSpaceTheme</item>
        <item name="android:textViewStyle">@style/TextViewSpaceTheme</item>
        <item name="bottomNavigationStyle">@style/bottomNavigationSpaceTheme</item>
        <item name="android:colorBackground">@color/dracula_gray</item>
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Widget's style Theme.MyNasa -->
    <style name="ChipStyleDefaultTheme" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@drawable/selector_background_chip</item>
    </style>

    <style name="bottomNavigationMyNasa" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:minHeight">60dp</item>
        <item name="itemPaddingTop">4dp</item>
        <item name="itemPaddingBottom">4dp</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemActiveIndicatorStyle">@style/ActiveIndicatorStyleMyNasa</item>
        <item name="itemRippleColor">@color/gray</item>
    </style>

    <!-- Widget's style ThemeSpace -->
    <style name="ChipStyleSpaceTheme" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@drawable/selector_background_chip_space_theme</item>
    </style>

    <style name="TextViewSpaceTheme" parent="Widget.Material3.CheckedTextView">
        <item name="android:fontFamily">@font/aclonica</item>
    </style>

    <style name="bottomNavigationSpaceTheme" parent="Widget.Material3.BottomNavigationView">
        <item name="android:minHeight">60dp</item>
        <item name="itemPaddingTop">4dp</item>
        <item name="itemPaddingBottom">4dp</item>

    </style>

    <style name="ActiveIndicatorStyleMyNasa" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/gray</item>
    </style>

</resources>